<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="com.bdaum.zoom.ui.galleryGenerator">
      <generator
            class="com.bdaum.zoom.web.galleria.GalleriaGenerator"
            description="html/preview.html"
            id="com.bdaum.zoom.web.galleria.generator"
            name="Galleria"
            sections="true"
            slideshows="true"
            unsupported="opacity sectionfont captionfont navfont thumbnailsize margins"
            url="https://galleria.io">
         <group
               name="%group.name.appearance">
         </group>
         <parameter
               default="com.bdaum.zoom.web.galleria.theme.classic"
               description="%theme.parameter.description"
               encodeForHtml="true"
               id="theme"
               label="%theme.parameter.label"
               required="false"
               type="string">
            <enumeration
                  id="classic"
                  label="%enumeration.label.classic">
            </enumeration>
            <enumeration
                  id="fullscreen"
                  label="%enumeration.label.fullscreen">
            </enumeration>
         </parameter>
         <parameter
               description="%options.parameter.description"
               encodeForHtml="false"
               id="themeOptions"
               label="%options.parameter.label"
               linkTo="theme"
               required="false"
               type="text">
         </parameter>
         <group
               name="%group.name.animation">
         </group>
         <parameter
               default="0.0"
               description="%autoplay.parameter.description"
               encodeForHtml="false"
               id="autoplay"
               label="%autoplay.parameter.label"
               max="300"
               min="0"
               required="false"
               type="double">
         </parameter>
      </generator>
   </extension>

</plugin>
